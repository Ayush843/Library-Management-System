import java.sql.*;

public class MemberService {
    public void registerMember(String name, String contact, String email) {
        String sql = "INSERT INTO members (name, contact, email) VALUES (?, ?, ?)";
        try (Connection conn = DatabaseHelper.getConnection();
             PreparedStatement stmt = conn.prepareStatement(sql)) {
            stmt.setString(1, name);
            stmt.setString(2, contact);
            stmt.setString(3, email);
            stmt.executeUpdate();
            System.out.println("âœ… Member registered successfully!");
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }

    public void listMembers() {
        String sql = "SELECT * FROM members";
        try (Connection conn = DatabaseHelper.getConnection();
             Statement stmt = conn.createStatement();
             ResultSet rs = stmt.executeQuery(sql)) {
            System.out.println("\n--- Members List ---");
            while (rs.next()) {
                System.out.printf("%d | %s | %s | %s\n",
                        rs.getInt("member_id"),
                        rs.getString("name"),
                        rs.getString("contact"),
                        rs.getString("email"));
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
